generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Order {
  id                 String   @id @default(cuid())
  referenceNo        String   @unique
  orderCode          String?
  shippingMethodNo   String?
  countryCode        String
  shippingMethod     String
  orderWeightKg      Float
  orderPieces        Int
  trackStatus        Int?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  trackingNumberList Json?
  lastLabelAt        DateTime?
  Labels             Label[]
}

model Label {
  id        String   @id @default(cuid())
  orderId   String
  url       String
  type      String
  createdAt DateTime @default(now())
  Order     Order    @relation(fields: [orderId], references: [id])
}
